@model UpdateTravelPackageViewModel
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Create Travel Package</h2>

            <form asp-controller="TravelPackage" asp-action="Update" method="post" role="form"  enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="PackageName"></label>
                    <input asp-for="PackageName" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="PhotoLocation"></label><br />
                    <img src="~/Media/TravelPackage/@Model.PackageName/@Model.PhotoLocation" alt="Alternate Text" class="photoLocation"/>
                    <input type="hidden" asp-for="PhotoLocation" class="form-control">
                </div>
                <div class="form-group">
                   
                    <input type="file" name="PhotoLocation" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Location"></label>
                    <input asp-for="Location" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="PackageDescription"></label>
                    <input asp-for="PackageDescription" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="PackagePrice"></label>
                    <input asp-for="PackagePrice" class="form-control">
                </div>
                <button type="submit" class="btn btn-default">Update</button>
            </form>
        </div>
    </div>
</div>