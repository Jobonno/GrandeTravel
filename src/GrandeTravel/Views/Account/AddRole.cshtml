@model AddRoleViewModel

<form class="form-horizontal" asp-action="AddRole" asp-controller="Account" method="post" role="form" asp-anti-forgery="true">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="NewRole" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="NewRole" class="form-control">
        </div>
    </div>
    <input type="submit" value="Add Role" />
</form>   
