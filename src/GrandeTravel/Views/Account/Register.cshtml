@model RegisterUserViewModel


<div class="container">
    
    <div class="row">
        <div class="col-lg-6  col-md-8  col-sm-9 col-xs-12">
            <h2>REGISTRATION FORM</h2>
            <form class="form-horizontal" asp-action="Register" asp-controller="Account" method="post" role="form">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Username"></label>
                    <div class="col-sm-9">
                        <input asp-for="Username" class="form-control" />
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Email"></label>
                    <div class="col-sm-9">
                        <input asp-for="Email" class="form-control" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Password"></label>
                    <div class="col-sm-9">
                        <input asp-for="Password" class="form-control" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="ConfirmPassword"></label>
                    <div class="col-sm-9">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>

                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-default">Register</button>
                </div>
               
            </form>
            <a asp-action="Contact" asp-controller="Home">Click Here To Register as a Travel Provider</a>
            
        </div>
        
    </div>
    

</div>
