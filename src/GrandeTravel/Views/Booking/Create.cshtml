@model CreateBookingViewModel

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Book Travel Package</h2>

            <form asp-controller="Booking" asp-action="Create" method="post" role="form">
                <div class="form-group">
                    <label asp-for="BookingDate"></label>
                    <input asp-for="BookingDate" value="@DateTime.Today.ToString("yyyy/dd/mm")" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="People"></label>
                    <input asp-for="People" class="form-control">
                </div>
                <div>
                    <input type="hidden" asp-for="MyUserId" />
                </div>
                <div>
                    <input type="hidden" asp-for="TravelPackageId" />
                </div>
                <div>
                    <input type="hidden" asp-for="Name" />
                </div>
                
                <button type="submit" class="btn btn-default">Book</button>
            </form>
        </div>
    </div>
</div>