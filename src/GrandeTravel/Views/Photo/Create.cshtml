@model CreatePhotoViewModel

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Create Travel Package</h2>
            <form asp-controller="Photo" asp-action="Create" method="post" role="form" enctype="multipart/form-data" asp-anti-forgery="true">
                <div class="form-group">
                    <label asp-for="TravelPackageId"></label>
                    <input type="hidden" asp-for="TravelPackageId" class="form-control">
                </div>
                <div class="form-group">
                    <label></label>
                    <input type="file" name="PhotoLocation" class="form-control" multiple>
                </div>

                <button type="submit" class="btn btn-default">Save</button>
            </form>
        </div>
    </div>
</div>