@model CreateFeedbackViewModel

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Leave a Feedback</h2>
            <form asp-controller="Feedback" asp-action="Create" method="post" role="form" asp-anti-forgery="true">
                <div class="form-group">
                    <label class="fa fa-star ratings" asp-for="Rating"></label>                    
                    <label class="fa fa-star ratings" for="Rating2"></label>                    
                    <label class="fa fa-star ratings" for="Rating3"></label>                    
                    <label class="fa fa-star ratings" for="Rating4"></label>                    
                    <label class="fa fa-star ratings" for="Rating5"></label>                   
                    <input asp-for="Rating" type="radio" value="1">
                    <input asp-for="Rating" id="Rating2" type="radio" value="2">
                    <input asp-for="Rating" id="Rating3" type="radio" value="3">
                    <input asp-for="Rating" id="Rating4" type="radio" value="4">
                    <input asp-for="Rating" id="Rating5" type="radio" value="5">
                </div> 
                <div class="form-group">
                    <label asp-for="Comment"></label>
                    <textarea asp-for="Comment" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Comment"></span>
                </div>               
                
                <div>
                    <input type="hidden" asp-for="TravelPackageId" />
                </div>
               

                <button type="submit" class="btn btn-default">Leave Feedback</button>
            </form>
        </div>
    </div>
</div>